<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="7dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lineDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_circle_blue"
            android:layout_marginEnd="4dp"
            android:visibility="invisible"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user"
            android:visibility="visible" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:lineSpacingExtra="0dp"
                android:text="Vienna castles the price has been reduced"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:textfont="@string/Gilroy_Light"/>

            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="A few seconds ago"
                android:paddingTop="10dp"
                android:paddingStart="8dp"
                android:textColor="@color/white65"
                android:textSize="14sp"
                app:textfont="@string/Gilroy_Light"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>