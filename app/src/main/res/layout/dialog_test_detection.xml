<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_gradient_12">
        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            android:text="@string/str_title_no_defect"
            app:textfont="@string/Gilroy_Regular"/>

        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            android:text="@string/str_description_no_defect"
            app:textfont="@string/Gilroy_Regular"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:id="@+id/lineDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="gone">
            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/btnShowResult"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:background="@drawable/bg_red_20"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:text="@string/str_show_result"
                android:textAllCaps="false"
                app:textfont="@string/Gilroy_SemiBold"/>

            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/btnCancel"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="@string/cancel"
                android:gravity="center"
                android:textAllCaps="false"
                app:textfont="@string/Gilroy_SemiBold"/>
        </LinearLayout>

        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
            android:id="@+id/btnOK"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="@string/OK"
            android:gravity="center"
            android:textAllCaps="false"
            app:textfont="@string/Gilroy_SemiBold"/>
    </LinearLayout>
</LinearLayout>