<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorTransparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_30">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:src="@drawable/bg_light"
            android:scaleType="fitXY"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_meatball"
                android:layout_marginTop="16dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:id="@+id/rlShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blue_pink_16"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:id="@+id/icShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share"
                            android:layout_marginBottom="6dp"/>

                        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                            android:id="@+id/tvScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/share"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_below="@+id/icShare"
                            app:textfont="@string/Gilroy_Medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlDownload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blue_pink_16"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:id="@+id/icDownload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_dowload"
                            android:layout_marginBottom="6dp"/>

                        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                            android:id="@+id/tvDownload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/download"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_below="@+id/icDownload"
                            app:textfont="@string/Gilroy_Medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlCopyLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blue_pink_16"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_copy"
                            android:layout_marginBottom="6dp"/>

                        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                            android:id="@+id/tvCopyLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/copy"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_below="@+id/icLink"
                            app:textfont="@string/Gilroy_Medium" />
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                    android:id="@+id/tvRename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rename_model"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_blue_pink_16"
                    app:textfont="@string/Gilroy_Medium"/>

                <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                    android:id="@+id/tvDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_model"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_red_16"
                    app:textfont="@string/Gilroy_Medium"/>

                <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                    android:id="@+id/tvCancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/bg_stroke_16_blue"
                    app:textfont="@string/Gilroy_Medium"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
</FrameLayout>