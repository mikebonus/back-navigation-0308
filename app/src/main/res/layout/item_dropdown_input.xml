<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <FrameLayout
            android:id="@+id/flDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_transparent_stroke_white_8"
            android:layout_gravity="center_vertical"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:popupBackground="@drawable/bg_gradient_12"
                android:textAlignment="center"
                android:background="@drawable/bg_gradient_12"
                android:drawSelectorOnTop="true"
                android:dropDownWidth="wrap_content"
                android:visibility="invisible"
                android:dropDownVerticalOffset="40dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="329dp"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icItem"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_public"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="34dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white65"
                    android:textSize="15dp"
                    android:visibility="visible"
                    app:textfont="@string/Gilroy_SemiBold" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="right|center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrown_up"/>
            </LinearLayout>


        </FrameLayout>
    </FrameLayout>

</LinearLayout>