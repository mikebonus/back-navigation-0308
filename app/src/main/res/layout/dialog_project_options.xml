<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@android:color/transparent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_options2">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lineAddNewBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/tvSceneScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_add_new_board"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="13dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:enabled="false"
                android:clickable="false"
                app:textfont="@string/Gilroy_Regular"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_grey2"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lineDeleteProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/tvObjectScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_delete_project"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="13dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:enabled="false"
                android:clickable="false"
                app:textfont="@string/Gilroy_Regular"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>