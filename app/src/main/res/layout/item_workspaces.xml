<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/bg_blue_pink_16">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_toStartOf="@id/icMore"
                android:ellipsize="end"
                android:lineSpacingExtra="0dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18dp"
                app:textfont="@string/Gilroy_SemiBold" />

            <ImageView
                android:id="@+id/icMore"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_three_dot" />
        </RelativeLayout>

        <com.luxpmsoft.luxaipoc.widget.TextViewFonts
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="41dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:textfont="@string/Gilroy_SemiBold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white35"
            android:layout_marginBottom="12dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_project" />

                <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                    android:id="@+id/tvTotalProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/avatar"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="0 Projects"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:textfont="@string/Gilroy_Regular" />
            </RelativeLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="visible"
                    android:src="@drawable/user"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAvatar1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="visible"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/user"/>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="45dp"
                    android:background="@drawable/circle_pink">

                    <TextView
                        android:id="@+id/btTryNet"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+1"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textAllCaps="false"/>
                </FrameLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/icAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_broad" />

                <com.luxpmsoft.luxaipoc.widget.TextViewFonts
                    android:id="@+id/tvTotalBoard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icAdd"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="0 Boards"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:textfont="@string/Gilroy_Regular" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>