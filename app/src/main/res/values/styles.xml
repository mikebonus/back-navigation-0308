<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@drawable/bg_options2</item>
        <item name="android:itemBackground">#271F55</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:divider">@color/white35</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>